{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "outDir": "./lib",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}